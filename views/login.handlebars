  <article class="article">
    <div class="title">
      <h2>Log In</h2>
    </div>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <div class="input-container">
          <input class="form-input" type="text" id="username-login" />
        </div>
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <div class="input-container">
          <input class="form-input" type="password" id="password-login" />
        </div>
      </div>
      <div class="form-group">
        <button id="submit" class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>

    <p>Need to create an account? <a href="/signup">Sign up</a></p>
  </article>          

